<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@drawable/attendance_background"
    android:padding="20dp"
    android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvAttendancePercentage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/attendance_circle_background"
            android:layout_width="wrap_content"
            android:text="80%"
            android:textColor="@color/secondary"
            android:textSize="24sp"
            android:padding="30dp"
            android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvAttendanceSubjectCode"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvAttendancePercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary"
        android:layout_margin="10dp"
        android:text="Subject Name"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvAttendedClassesCount"
        app:layout_constraintTop_toBottomOf="@id/tvAttendanceSubjectCode"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary"
        android:layout_margin="10dp"
        android:textSize="24sp"
        android:text="25/30"/>




</androidx.constraintlayout.widget.ConstraintLayout>